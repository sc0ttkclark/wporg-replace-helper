{
  "name": "wporg-replace-helper",
  "version": "1.0.0",
  "description": "A set of scripts that help with replacing version numbers and other text for a WordPress.org plugin.",
  "scripts": {
    "update-plugin-version": "npm run wporg-replace-package-version && npm run wporg-replace-stable-tag && npm run wporg-replace-plugin-version && npm run wporg-replace-plugin-version-constant && npm run wporg-replace-plugin-version-class-constant",
    "update-minimum-php": "npm run wporg-replace-requires-php && npm run wporg-replace-requires-php-constant && npm run wporg-replace-requires-php-class-constant",
    "update-minimum-wp": "npm run wporg-replace-requires-at-least && npm run wporg-replace-requires-at-least-constant && npm run wporg-replace-requires-at-least-class-constant",
    "update-tested-wp": "npm run wporg-replace-tested-up-to && npm run wporg-replace-tested-up-to-constant && npm run wporg-replace-tested-up-to-class-constant",
    "wporg-replace-stable-tag": "replace 'Stable tag:(\\s*)([\\.\\d\\w\\-]*)\n' \"Stable tag:\\$1$npm_config_plugin_version\n\" $npm_config_plugin_path/readme.txt",
    "wporg-replace-package-version": "replace '\"version\": \"([\\.\\d\\w\\-]*)\",\n' \"\\\"version\\\": \\\"$npm_config_plugin_version\\\",\n\" $npm_config_plugin_path/package.json",
    "wporg-replace-plugin-version": "replace 'Version:(\\s*)([\\.\\d\\w\\-]*)\n' \"Version:\\$1$npm_config_plugin_version\n\" $npm_config_plugin_path/$npm_config_plugin_file",
    "wporg-replace-plugin-version-constant": "replace \"define\\((\\s*)'$npm_config_plugin_version_constant_name',(\\s*)'([\\.\\d\\w\\-]*)'(\\s*)\\);\" \"define(\\$1'$npm_config_plugin_version_constant_name',\\$2'$npm_config_plugin_version'\\$4);\" $npm_config_plugin_path/$npm_config_plugin_file",
    "wporg-replace-plugin-version-class-constant": "replace \"const $npm_config_plugin_version_constant_name = \\'([\\.\\d\\w\\-]*)\\'\" \"const $npm_config_plugin_version_constant_name = '$npm_config_plugin_version'\" $npm_config_plugin_path/$npm_config_plugin_file",
    "wporg-replace-requires-php": "replace 'Requires PHP:(\\s*)([\\.\\d\\w\\-]*)\n' \"Requires PHP:\\$1$npm_config_required_php\n\" $npm_config_plugin_path/$npm_config_plugin_file $npm_config_plugin_path/readme.txt",
    "wporg-replace-requires-php-constant": "replace \"define\\((\\s*)'$npm_config_required_php_constant_name',(\\s*)'([\\.\\d\\w\\-]*)'(\\s*)\\);\" \"define(\\$1'$npm_config_required_php_constant_name',\\$2'$npm_config_required_php'\\$4);\" $npm_config_plugin_path/$npm_config_plugin_file",
    "wporg-replace-requires-php-class-constant": "replace \"const $npm_config_required_php_constant_name = '([\\.\\d\\w\\-]*)'\" \"const $npm_config_required_php_constant_name = '$npm_config_required_php'\" $npm_config_plugin_path/$npm_config_plugin_file",
    "wporg-replace-requires-at-least": "replace 'Requires at least:(\\s*)([\\.\\d\\w\\-]*)\n' \"Requires at least:\\$1$npm_config_minimum_wp\n\" $npm_config_plugin_path/$npm_config_plugin_file $npm_config_plugin_path/readme.txt",
    "wporg-replace-requires-at-least-constant": "replace \"define\\((\\s*)'$npm_config_minimum_wp_constant_name',(\\s*)'([\\.\\d\\w\\-]*)'(\\s*)\\);\" \"define(\\$1'$npm_config_minimum_wp_constant_name',\\$2'$npm_config_minimum_wp'\\$4);\" $npm_config_plugin_path/$npm_config_plugin_file",
    "wporg-replace-requires-at-least-class-constant": "replace \"const $npm_config_minimum_wp_constant_name = '([\\.\\d\\w\\-]*)'\" \"const $npm_config_minimum_wp_constant_name = '$npm_config_minimum_wp'\" $npm_config_plugin_path/$npm_config_plugin_file",
    "wporg-replace-tested-up-to": "replace 'Tested up to:(\\s*)([\\.\\d\\w\\-]*)\n' \"Tested up to:\\$1$npm_config_tested_wp\n\" $npm_config_plugin_path/$npm_config_plugin_file $npm_config_plugin_path/readme.txt",
    "wporg-replace-tested-up-to-constant": "replace \"define\\((\\s*)'$npm_config_tested_wp_constant_name',(\\s*)'([\\.\\d\\w\\-]*)'(\\s*)\\);\" \"define(\\$1'$npm_config_tested_wp_constant_name',\\$2'$npm_config_tested_wp'\\$4);\" $npm_config_plugin_path/$npm_config_plugin_file",
    "wporg-replace-tested-up-to-class-constant": "replace \"const $npm_config_tested_wp_constant_name = '([\\.\\d\\w\\-]*)'\" \"const $npm_config_tested_wp_constant_name = '$npm_config_tested_wp'\" $npm_config_plugin_path/$npm_config_plugin_file"
  },
  "devDependencies": {},
  "dependencies": {
    "replace": "^1.2.2"
  }
}
